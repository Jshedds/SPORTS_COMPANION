<div id="bg-container-soccer" style="background-position: center">

  <div class="index-btn">
    <%= link_to sport_path(@sport) do %>
      <%= render_icon "back" %>
    <% end %>
  </div>
  
  <% @sport.positions.each do |position| %>

    <% if position.positions_name == "Left Center-back"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="CB1" style="background-image: url('<%= image_path "RCB.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Right Center-back"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="CB2" style="background-image: url('<%= image_path "LCB.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Left-back"%>
      <%= link_to sport_position_path(@sport, position) do %>
        <div id="LB" style="background-image: url('<%= image_path "LB.png" %>');">
        </div>
      <% end %>

    <% elsif position.positions_name == "Right-back"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="RB" style="background-image: url('<%= image_path "RB.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Defensive Midfielder"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="CDM" style="background-image: url('<%= image_path "CDM.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Central Midfielder"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="CM" style="background-image: url('<%= image_path "CM.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Attacking Midfielder"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="CAM" style="background-image: url('<%= image_path "CAM.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Right Winger"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="RW" style="background-image: url('<%= image_path "RW.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Left Winger"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="LW" style="background-image: url('<%= image_path "LW.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Striker"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="ST" style="background-image: url('<%= image_path "ST.png" %>');">
          </div>
        <% end %>

    <% elsif position.positions_name == "Goalkeeper"%>
        <%= link_to sport_position_path(@sport, position) do %>
          <div id="GK" style="background-image: url('<%= image_path "GK.png" %>');">
          </div>
        <% end %>
    <% end %>
  <% end %>
</div>
