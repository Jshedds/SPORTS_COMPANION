<div class="admin-add-btn">
  <%= link_to "add a sport", new_sport_path if current_user && policy(Sport).new? %>
</div>

<% @sports.each do |sport| %>
  <%= link_to sport_path(sport) do %>
  <% if sport.name == "Basketball" %>
    <% background_image = 'basketball_jump_shot.jpg' %>
    <% elsif sport.name == "Football" %>
    <% background_image = 'football_dribble.jpg' %>
    <% elsif sport.name == "Rugby Union" %>
    <% background_image = 'rugby.jpg' %>
    <% elsif sport.name == "American Football" %>
    <% background_image = 'american-football-run.jpg' %>
  <% end %>
    <div class="sport-image" style="background-image: url(<%= image_path background_image %>)"><h3><%= sport.name %></h3></div>
  <% end %>
<% end %>
