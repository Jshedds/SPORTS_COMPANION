<div class="container chatroom" data-controller="chatroom-subscription" data-chatroom-subscription-chatroom-name-value="<%= @chatroom.name %>">
  <h1>#<%= @chatroom.name %></h1>

  <div class="messages" data-chatroom-subscription-target="messages">
    <% @chatroom.messages.each do |message| %>
      <div class="bubble">
        <%= render "messages/message", message: message %>
      </div>
    <% end %>
  </div>

  <div data-chatroom-subscription-target="submit">
    <%= simple_form_for [@sport, @chatroom, @message],
      html: {class: "d-flex",
        data: {
          action: "turbo:submit-end->chatroom-subscription#resetForm"
        }
      } do |f|
    %>
      <%= f.input :content,
        label: false,
        placeholder: "Message ##{@chatroom.name}",
        wrapper_html: {class: "flex-grow-1"}
      %>
      <%= f.submit "Send", class: "btn btn-primary mb-3" %>
    <% end %>
  </div>
  <%= link_to "Back to #{@sport.name}", sport_path(@sport) %>
</div>
