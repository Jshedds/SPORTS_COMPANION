<div class="sport-title">
  <h1><%= @sport.name %></h1>
</div>
<div class="show-sport-btns">
      <div class="favourite-btn">
  <% if @current_user.favourites.exists?(sport_id: @sport.id) %>
    <%= link_to sport_path ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
    <%= render_icon "unfavourite" %>
    <% end %>
  <% else %>
    <%= simple_form_for [@sport, @favourite] do |f| %>
        <button type="submit" style= "border: 0;background-color: transparent">
          <svg width="32px" height="32px" viewBox="-0.5 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <path d="M15.6001 3.91998C14.268 3.92397 12.9849 4.42297 12 5.32001C11.2277 4.61746 10.2676 4.15485 9.23679 3.98858C8.20602 3.82231 7.1491 3.95955 6.19498 4.3836C5.24087 4.80765 4.43081 5.50018 3.8635 6.37671C3.29619 7.25324 2.99614 8.27591 3.00004 9.32C3.00004 15.77 12 20.14 12 20.14C12 20.14 21 15.77 21 9.32C21 7.88784 20.4311 6.51434 19.4184 5.50165C18.4057 4.48895 17.0322 3.91998 15.6001 3.91998Z" stroke="#000000" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"></path> </g></svg>
        <% end %>
         <% end %>
      </div>
      <div class="chatroom-btn">
        <%= link_to render_icon("chatroom"), sport_chatroom_path(@sport, @chatroom) %>
      </div>
      <div class="all-sports-btn">
        <%= link_to render_icon("all_sports"), sports_path %>
      </div>
      <% if current_user && policy(Sport).edit? %>
        <div class="edit-btn">
          <%= link_to edit_sport_path do %>
            <%= render_icon "edit" %>
          <% end %>
        </div>
      <% end %>
</div>


